<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:padding="20sp">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:text="@string/app_name"
               android:layout_marginTop="20sp"
               android:layout_marginBottom="20sp"
               android:id="@+id/project_title"
               android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical|end"
               android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
               android:text="@string/app_name"
               android:id="@+id/project_description"
               android:layout_marginBottom="20sp"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginBottom="20sp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="0.5"
                   android:orientation="vertical"
                   android:gravity="center">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

                      <ImageView
                          android:layout_width="32dp"
                          android:layout_height="32dp"
                          android:src="@drawable/ic_watch_later_black_24dp"
                          android:contentDescription="@string/start_time"
                          android:layout_marginEnd="5dp"/>

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/project_startDate"
                          android:text="@string/app_name"
                          android:layout_marginBottom="10sp"
                          android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"/>

                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

                      <ImageView
                          android:layout_width="32dp"
                          android:layout_height="32dp"
                          android:src="@drawable/ic_watch_later_red_24dp"
                          android:contentDescription="@string/end_time"
                          android:layout_marginEnd="5dp"/>

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/project_endDate"
                          android:text="@string/app_name"
                          android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"/>

                  </LinearLayout>

               </LinearLayout>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="0.5"
                   android:gravity="center">

                   <ProgressBar
                       android:id="@+id/project_phase_progress"
                       style="?android:attr/progressBarStyleHorizontal"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:background="@drawable/circle_shape"
                       android:layout_centerInParent="true"
                       android:indeterminate="false"
                       android:max="100"
                       android:progress="90"
                       android:progressDrawable="@drawable/circular_progress_bar" />

                   <TextView
                       android:id="@+id/txtProgress"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignBottom="@+id/project_phase_progress"
                       android:layout_centerInParent="true"
                       android:text="@string/app_name"
                       android:textAppearance="?android:attr/textAppearanceSmall" />

               </RelativeLayout>

           </LinearLayout>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:text="@string/members"
               android:layout_marginBottom="20sp"
               android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginBottom="30sp">

               <Button
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="0.5"
                   style="@style/buttonPattern"
                   android:layout_marginEnd="10sp"
                   android:text="@string/students"
                   android:id="@+id/project_students"/>

               <Button
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="0.5"
                   style="@style/buttonPattern"
                   android:layout_marginStart="10sp"
                   android:text="@string/professors"
                   android:id="@+id/project_professors"/>

           </LinearLayout>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:text="@string/in_progress"
               android:layout_marginBottom="20sp"
               android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"/>

           <android.support.v7.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/recycler_phases"/>

       </LinearLayout>

    </ScrollView>

</LinearLayout>